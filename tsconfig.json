{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs", // Other options: "esnext", "amd", "system", "umd", "es2015", "es2020", "es2022", "node16", "nodenext"
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
} 